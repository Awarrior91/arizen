{
  "name": "Arizen",
  "version": "0.0.1",
  "description": "Wallet for ZenCash (ZEN)",
  "main": "app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "build --dir",
    "dist": "build"
  },
  "homepage": "https://zensystem.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zencashofficial/arizen.git"
  },
  "bugs": {
    "url": "https://github.com/zencashofficial/arizen/issues"
  },
  "keywords": [
    "zen",
    "zencash",
    "equihash",
    "wallet",
    "windows",
    "mac",
    "osx",
    "linux",
    "desktop",
    "electron"
  ],
  "author": "@lukas, @nonghost and @k4chn1k",
  "license": "MIT",
  "engines": {
    "node": ">=6.0"
  },
  "build": {
    "appId": "io.zensystem.arizen",
    "mac": {
      "category": "public.app-category.finance",
      "type": "development"
    },
    "dmg": {
      "backgroundColor": "#888888",
      "icon": "build/icon.icns",
      "title": "${productName} ${version}",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "electron-packager": "^8.7.1",
    "electron-simple-updater": "^1.2.1",
    "electron-tabs": "^0.7.1",
    "errors": "^0.3.0",
    "fs-extra": "^4.0.1",
    "password-hash": "^1.2.2"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^19.26.3",
    "flow-bin": "^0.50.0"
  },
  "optionalDependencies": {
    "electron-installer-dmg": "latest",
    "electron-installer-windows": "^0.2.0",
    "electron-installer-debian": "^0.5.2"
  }
}
