{
  "name": "Arizen",
  "version": "1.0.0",
  "description": "Wallet for ZenCash (ZEN)",
  "main": "app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "build --dir",
    "dist": "build",
    "publish": "publish",
    "release": "npm run dist && npm run publish"
  },
  "homepage": "https://zensystem.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zencashofficial/arizen.git"
  },
  "bugs": {
    "url": "https://github.com/zencashofficial/arizen/issues"
  },
  "updater": {
    "url": "https://raw.githubusercontent.com/ZencashOfficial/arizen/master/updates.json"
  },
  "keywords": [
    "zen",
    "zencash",
    "equihash",
    "wallet",
    "windows",
    "mac",
    "osx",
    "linux",
    "desktop",
    "electron"
  ],
  "author": "ZEN team <lukas@zensystem.io>",
  "contributors": [
    {
      "name": "@lukas",
      "email": "lukas@zensystem.io"
    },
    {
      "name": "@nonghost",
      "email": "neduchal@gmail.com"
    },
    {
      "name": "@k4chn1k",
      "email": "k4chn1k@gmail.com"
    }
  ],
  "license": "MIT",
  "engines": {
    "node": ">=6.0"
  },
  "build": {
    "appId": "io.zensystem.arizen",
    "mac": {
      "category": "public.app-category.finance",
      "type": "distribution"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.icns",
      "backgroundColor": "#888888",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/",
      "category": "Office"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "bip32-utils": "^0.10.0",
    "bitcoinjs-lib": "^3.2.1",
    "electron-download": "^4.1.0",
    "electron-packager": "^9.1.0",
    "electron-simple-updater": "^1.2.1",
    "electron-tabs": "^0.7.3",
    "errors": "^0.3.0",
    "fs-extra": "^4.0.2",
    "npm": "^5.5.1",
    "password-hash": "^1.2.2",
    "qrcode": "^0.9.0",
    "request": "^2.83.0",
    "sql.js": "^0.4.0",
    "zencashjs": "^1.1.6-a"
  },
  "devDependencies": {
    "ajv": "^5.2.5",
    "electron": "^1.8.1",
    "electron-builder": "^19.40.0",
    "electron-builder-squirrel-windows": "^19.40.0",
    "flow-bin": "^0.56.0"
  },
  "optionalDependencies": {
    "electron-installer-debian": "^0.6.0",
    "electron-installer-dmg": "^0.2.1",
    "electron-installer-windows": "^0.2.0"
  }
}
